package br.com.libsalaarcoiris.jdbc;

import java.sql.Connection;
import java.sql.SQLException;
import java.sql.Statement;
import java.util.ArrayList;
import java.util.List;

import com.google.gson.JsonObject;

import java.sql.PreparedStatement;
import java.sql.ResultSet;

import br.com.libsalaarcoiris.jdbcinterface.AlunoDAO;
import br.com.libsalaarcoiris.modelo.Aluno;



public class JDBCAlunoDAO implements AlunoDAO{
	
private Connection conexao;

public JDBCAlunoDAO(Connection conexao) {
	this.conexao = conexao;
}
	public boolean inserir (Aluno aluno) {
		String comando = " INSERT INTO aluno (primeirNomeAluno, sobreNomeAluno, Escola, dataNascimento, cpf) "
				+ "values (?,?,?,?,?);";
				
				
				PreparedStatement p;
				
				try {
					
					p = this.conexao.prepareStatement(comando);
				
					p.setString(1, aluno.getPrimNomeA());
					p.setString(2, aluno.getSobrenomeA());
					p.setString(3, aluno.getEscola());
					p.setString(4, aluno.getDataNas());
					p.setString(5, aluno.getCpf());
					
					p.execute();
					
				}catch (SQLException e) {
					e.printStackTrace();
					return false;
				}
				return true;
			}
}