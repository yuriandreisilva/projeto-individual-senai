package br.com.salaarcoiris.bd;

import java.sql.Connection;
import java.sql.DriverManager;


public class Conexao {
	private static final String USERNAME = "root";
	
	private static final String PASSWORD = "root";
	
	private static final String DATABASE_URL = "jdbc:mysql://localhost:3306/aluno";
	
	public static Connection createConnectionToMySql() throws Exception {
		// Classe carregada pela JVM
		Class.forName("com.mysql.jdbc.Driver");
		
		// Cria conexão com bd
		Connection connection = DriverManager.getConnection(DATABASE_URL, USERNAME, PASSWORD);
		
		return connection;
	}
	
	public static void main(String[] args) throws Exception {
		// Recuperar uma conexão com o bd, se tiver
		
		Connection con = createConnectionToMySql();
		
		if (con!=null) {
			System.out.println("Conexão obetida com sucesso!");
			con.close();
		}
	}
}
